{
  "name": "react-x-nodejs",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api",
    "web"
  ],
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "build": "yarn workspaces run build",
    "start:dev": "yarn workspaces run start:dev",
    "start:prod": "yarn workspaces run start:prod",
    "api:dev": "yarn workspace api start:dev",
    "api:prod": "yarn workspace api start:prod",
    "web:dev": "yarn workspace web dev",
    "web:prod": "yarn workspace web start",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "install:all": "yarn install"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  }
}
